-if @book.empty?
  =render :text => 'no books currently :('
-else
  - @book.each_slice(4) do |books|
    .row
      - books.each do |book|
        .col-md-3
          .book
            .image_wrapper
              = link_to book do
                = image_tag book.image.url(:medium)
            %h2= link_to book.title, book